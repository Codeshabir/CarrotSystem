@model CarrotSystem.Models.MPS.User

@{
    ViewBag.Title = "Login";
    Layout = "_Layout_login";
}

<div class="authentication-inner row m-0">
    <!-- /Left Text -->
    <div class="d-none d-lg-flex col-lg-7 col-xl-8 align-items-center">
        <div class="flex-row text-center mx-auto">
            <img src="~/theme/theme01/img/pages/5031659.png"
                 alt="Auth Cover Bg color"
                 width="800"
                 class="img-fluid authentication-cover-img"
                 data-app-light-img="pages/5031659.png"
                 data-app-dark-img="pages/5031659.png" />
            <div class="mx-auto">
                <h3>Power to automate your business</h3>
                <p>
                    Streamlining operations, boosting efficiency, and driving growth.
                </p>
            </div>
        </div>
    </div>
    <!-- /Left Text -->
    <!-- Login -->
    <div class="d-flex col-12 col-lg-5 col-xl-4 align-items-center authentication-bg p-sm-5 p-4">
        <div class="w-px-400 mx-auto">
            <!-- /Logo -->
            <img class="img-responsive mb-3" width="100%" src="~/images/mercorella_AK-02.png" />
            @if (!string.IsNullOrEmpty(ViewBag.message))
            {
                <div class="alert alert-danger alert-dismissible" role="alert">
                    <h6 class="alert-heading mb-1"><i class="bx bx-xs bx-store align-top me-2"></i>Notice!</h6>
                    <span>@ViewBag.message</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form id="formAuthentication" class="mb-3" asp-action="ForgotPassword" asp-controller="Accounts">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="text"
                           class="form-control"
                           id="Email" 
                           name="Email"
                           placeholder="Please Enter Your Email"
                           autofocus
                           required />
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <a href="/Accounts/Login" class="btn btn-primary d-grid w-100">Back to sign in</a>
                    </div>
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-primary d-grid w-100">Forgot Password</button>
                    </div>
                </div>

            </form>

        </div>
    </div>
    <!-- /Login -->
</div>
