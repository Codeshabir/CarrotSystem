@model List<CarrotSystem.Models.ViewModel.TransferJsonView>

@{
    Layout = null;
}

@if (Model.Count > 0)
{
    @foreach (var transfer in Model)
    {
        if(transfer.IsClosed)
        {
            <tr>
                <td>@transfer.TransferDate.ToString("dd/MM/yyyy")</td>
                <td>@transfer.FromProduct</td>
                <td>@String.Format("{0:#,0.##}", transfer.FromQty)</td>
                <td>@transfer.ToProduct</td>
                <td>@String.Format("{0:#,0.##}", transfer.ToQty)</td>
                <td>@transfer.Price</td>
                <td class="text-center">
                    <a class="btn btn-icon btn-danger" disabled><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
        else
        {
            <tr>
                <td>@transfer.TransferDate.ToString("dd/MM/yyyy")</td>
                <td>@transfer.FromProduct</td>
                <td>
                    <input class="form-control" type="text" value="@String.Format("{0:#,0.##}", transfer.FromQty)" onchange="ChangeValue('@transfer.DataId', 'FromQty', this.value);" onKeyup="this.value=this.value.replace(/[^0-9.]/g,'');"/>
                </td>
                <td>@transfer.ToProduct</td>
                <td>
                    <input class="form-control" type="text" value="@String.Format("{0:#,0.##}", transfer.ToQty)" onchange="ChangeValue('@transfer.DataId', 'ToQty', this.value);" onKeyup="this.value=this.value.replace(/[^0-9.]/g,'');"/>
                </td>
                <td>
                    <input class="form-control" type="text" value="@String.Format("{0:#,0.##}", transfer.Price)" onchange="ChangeValue('@transfer.DataId', 'Price', this.value);" onKeyup="this.value=this.value.replace(/[^0-9.]/g,'');" />
                </td>
                <td class="text-center">
                    <button class="btn btn-icon btn-danger" OnClick="DeleteModel(@transfer.DataId)"><i class="fa fa-trash"></i></button>
                </td>
            </tr>
        }

    }
}
else
{
    <div class="alert alert-warning">
        No records for the selected period.
    </div>
}


