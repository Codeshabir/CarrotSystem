@model CarrotSystem.Models.ViewModels.PickingListViewModel
@{
    ViewBag.Title = "Picking list";
    Layout = "_Layout";
    var totalItem = 0;
}
<link href="~/theme/theme01/vendor/css/pages/app-invoice.css" rel="stylesheet" />

<div class="row invoice-preview">
    <!-- Invoice -->
    <div class="col-xl-9 col-md-8 col-12 mb-md-0 mb-4">
        <div class="card invoice-preview-card">

        <div class="card-body">
            <div class="d-flex justify-content-between flex-xl-row flex-md-column flex-sm-row flex-column p-sm-3 p-0">
                <div class="mb-xl-0 mb-4">
                    <div class="d-flex svg-illustration mb-3 gap-2">
                        <img src="~/images/mercorella_ak-02.png" width="200px" />
                    </div>
                </div>
                <div>
                    <h4>Invoice #@Model.DispatchView.InvoiceId</h4>
                    <div class="mb-2">
                        <span class="me-1">Date:</span>
                        <span class="fw-semibold">@Model.DispatchView.DispatchDate.ToString("dddd, dd MMM yyyy")</span>
                    </div>
                </div>
            </div>
        </div>
        <hr class="my-0" />
        <div class="card-body">
            <div class="row p-sm-3 p-0">
                <div class="col-xl-6 col-md-12 col-sm-5 col-12 mb-xl-0 mb-md-4 mb-sm-0 mb-4">
                    <p class="mb-1">Cust PO:  @Model.DispatchView.CustPO</p>
                    <p class="mb-1">Customer: @Model.DispatchView.CustomerName</p>
                    <p class="mb-1">Shipping Address: @Model.DispatchView.ShippingAddress</p>
                    <p class="mb-1">Comment: @Model.DispatchView.Comment</p>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table border-top m-0">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Description</th>
                        <th>Qty</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.DispatchViewList)
                    {
                        totalItem = totalItem + (int)item.Ordered;

                        <tr>
                            <td class="text-nowrap">@item.ProductCode</td>
                            <td class="text-nowrap">@item.ProductDesc</td>
                            <td>@item.Ordered</td>
                        </tr>
                    }
                    <tr>
                        <td></td>
                        <td>Total Items </td>
                        <td>@totalItem</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <br />
        <br />
        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    <span class="fw-semibold">Picker:</span>
                    <hr />
                </div>
            </div>
        </div>
        </div>
    </div>
    <!-- /Invoice -->
    <!-- Invoice Actions -->
    <div class="col-xl-3 col-md-4 col-12 invoice-actions">
        <div class="card">
            <div class="card-body">
                <button class="btn btn-primary d-grid w-100 mb-3">
                    <span class="d-flex align-items-center justify-content-center text-nowrap"><i class="bx bx-paper-plane bx-xs me-1"></i>Send Invoice</span>
                </button>

                <a href="/Sales/PickingList?dispatchId=@Model.DispatchView.DispatchId" class="btn btn-primary d-grid w-100 mb-3">
                    <span class="d-flex align-items-center justify-content-center text-nowrap text-white">Print / Download Invoice</span>
                </a>
            </div>
        </div>
    </div>
    <!-- /Invoice Actions -->
</div>